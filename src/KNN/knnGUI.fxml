            <Label text="Result">
               <graphic>
                  <TextField fx:id="result" />
               </graphic>
               <font>
                  <Font name="Arial Bold" size="17.0" />
               </font>
            </Label>
         </children>
      </VBox>
      <Button fx:id="submit" layoutX="60.0" layoutY="211.0" mnemonicParsing="false" onMouseClicked="#show" text="Show Measures" />
